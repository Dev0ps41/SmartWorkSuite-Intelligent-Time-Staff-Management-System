<UserControl x:Class="EmployerTimeManagement.ThemeSettingsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="Auto" Width="Auto"
             Background="#1C1F26"
             FontFamily="Segoe UI" FontSize="14">

    <Grid Background="#1C1F26" Margin="20">
        <Border Background="#F5F5F5" CornerRadius="10" Padding="30" BorderBrush="#DDD" BorderThickness="1" Width="320">
            <StackPanel>

                <TextBlock Text="🎨 Θέμα Εφαρμογής"
                           FontSize="20"
                           FontWeight="Bold"
                           Foreground="Black"
                           Margin="0 0 0 20"
                           HorizontalAlignment="Center"/>

                <!-- Μόνο Modern Dark -->
                <RadioButton x:Name="ModernDarkThemeRadio"
                             Content="Modern Dark"
                             IsChecked="True"
                             Margin="0 6"
                             Foreground="Black"
                             FontWeight="SemiBold"
                             HorizontalAlignment="Left"/>

                <!-- Κουμπί Εφαρμογής -->
                <Button Content="💾 Εφαρμογή"
                        Width="160"
                        Height="40"
                        Background="#2ECC71"
                        Foreground="White"
                        FontWeight="Bold"
                        BorderBrush="Transparent"
                        Margin="0,20,0,0"
                        Click="ApplyTheme_Click"
                        HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
