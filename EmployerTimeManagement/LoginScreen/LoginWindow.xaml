<Window x:Class="EmployerTimeManagement.LoginScreen.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Σύνδεση" Height="450" Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="None">
    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="Black"/>
            <GradientStop Color="#FF2D314A" Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>

    <Grid Margin="20">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">

            <!-- Logo -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,30">
                <Image Source="/Assets/SmartWorkSuite.png" Height="40" Margin="0,0,10,0"/>
                <TextBlock Text="SmartWorkSuite"
                           FontSize="20"
                           FontWeight="Bold"
                           Foreground="White"
                           VerticalAlignment="Center"/>
            </StackPanel>

            <!-- Username -->
            <TextBox materialDesign:HintAssist.Hint="Όνομα χρήστη"
                     x:Name="UsernameTextBox"
                     Margin="0,0,0,10"
                     Style="{DynamicResource MaterialDesignFloatingHintTextBox}"
                     FontSize="14"
                     Background="White"
                     Foreground="Black"
                     Padding="8"
                     BorderThickness="0"/>

            <!-- Password -->
            <PasswordBox x:Name="PasswordBox"
                         materialDesign:HintAssist.Hint="Κωδικός πρόσβασης"
                         Margin="0,0,0,10"
                         Style="{DynamicResource MaterialDesignFloatingHintPasswordBox}"
                         FontSize="14"
                         Background="White"
                         Foreground="Black"
                         Padding="8"
                         BorderThickness="0"/>

            <!-- Remember Me Checkbox -->
            <CheckBox Content="Να με θυμάσαι"
                      Foreground="White"
                      Margin="0,5,0,15"
                      FontSize="13"
                      Style="{StaticResource MaterialDesignCheckBox}"/>

            <!-- Buttons -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
                <Button Content="Σύνδεση"
                        Click="LoginButton_Click"
                        Background="#2B79C2"
                        Foreground="White"
                        FontWeight="Bold"
                        Padding="10,5"
                        Cursor="Hand"
                        FontSize="14"
                        BorderThickness="0"
                        Width="100"
                        Margin="0,0,10,0"/>

                <Button Content="Ακύρωση"
                        Click="CancelButton_Click"
                        Background="#444"
                        Foreground="White"
                        FontWeight="Bold"
                        Padding="10,5"
                        Cursor="Hand"
                        FontSize="14"
                        BorderThickness="0"
                        Width="100"/>
            </StackPanel>

            <!-- Error Message -->
            <TextBlock x:Name="ErrorTextBlock"
                       Text="Μη έγκυρα διαπιστευτήρια"
                       Foreground="Red"
                       Visibility="Collapsed"
                       Margin="0,10,0,0"
                       HorizontalAlignment="Center"
                       FontSize="13"/>
        </StackPanel>
    </Grid>
</Window>